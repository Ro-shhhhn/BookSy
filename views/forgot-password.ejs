<!-- views/forgot-password.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookSy - Forgot Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .btn-reset {
            background-color: #d9342f;
        }
        .btn-reset:hover {
            background-color: #c02d28;
        }
    </style>
</head>
<body class="bg-white font-sans">
    <div class="min-h-screen flex flex-col">
        <!-- Header with logo -->
        <header class="p-6">
            <div class="flex items-center">
                <svg class="w-8 h-8 text-gray-800" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                    <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                </svg>
                <span class="ml-2 text-xl font-semibold">BookSy</span>
            </div>
        </header>

        <main class="flex-grow flex items-center justify-center px-6">
            <div class="w-full max-w-4xl flex flex-col lg:flex-row shadow-lg rounded-lg overflow-hidden">
                <!-- Left side: Form -->
                <div class="w-full lg:w-1/2 bg-white p-10 flex flex-col justify-center">
                    <!-- Heading -->
                    <h1 class="text-2xl font-semibold text-[#b08968] mb-4 text-center">Forgot Password?</h1>
                    
                    <!-- Instruction text -->
                    <p class="mb-6 text-gray-600 text-center">
                        Enter your email and we'll send you instructions to reset your password.
                    </p>
                    
                    <!-- Error message (if any) -->
                    <% if (typeof errorMessage !== 'undefined') { %>
                        <div class="mb-4 p-2 bg-red-100 text-red-500 border border-red-300 rounded-md">
                            <%= errorMessage %>
                        </div>
                    <% } %>

                    <!-- Form -->
                    <form action="/forgot-password" method="POST" class="space-y-4">
                        <!-- Email field -->
                        <div class="relative border border-gray-300 rounded-md flex items-center p-2">
                            <span class="pl-2 text-gray-500">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </span>
                            <input 
                                type="email" 
                                name="email" 
                                placeholder="Enter your email" 
                                class="w-full px-3 py-2 focus:outline-none rounded-md text-gray-700"
                                required
                            >
                        </div>
                        
                        <!-- Reset button -->
                        <button type="submit" class="w-full py-3 btn-reset text-white rounded-md text-lg hover:opacity-90 transition duration-200">
                            Reset Password
                        </button>
                    </form>
                    
                    <!-- Footer -->
                    <div class="mt-6 text-center text-sm text-gray-500">
                        Â© 2025 BookSy Inc. All rights reserved.
                    </div>
                </div>
                
                <!-- Right side: Image -->
                <div class="hidden lg:block lg:w-1/2 mt-[-40px]">
                    <img 
                        src="/images/cat-books.jpg" 
                        alt="Forgot Password Illustration" 
                        class="w-full h-full object-cover"
                    >
                </div>
                
            </div>
        </main>
    </div>
</body>
</html>
