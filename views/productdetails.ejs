        fetch('/wishlist/toggle', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId }),
        })
        .then(response => {
            if (response.redirected) {
                window.location.href = response.url;
                return Promise.reject();
            }
            return response.json();
        })
