document.addEventListener('DOMContentLoaded', function() {
    // Image Thumbnail Selection
    const thumbnailImages = document.querySelectorAll('.thumbnail-image');
    const mainImage = document.getElementById('main-image');

    thumbnailImages.forEach(thumbnail => {
        thumbnail.addEventListener('click', function() {
            // Remove ring from all thumbnails
            thumbnailImages.forEach(t => t.classList.remove('ring-2', 'ring-blue-500'));
            
            // Add ring to selected thumbnail
            this.classList.add('ring-2', 'ring-blue-500');
            
            // Change main image source
            const newImageSrc = this.getAttribute('data-image');
            mainImage.src = newImageSrc;
        });
    });

    // Image Zoom Functionality
    const imgZoomContainer = document.getElementById('img-zoom-container');
    const imgZoomResult = document.getElementById('img-zoom-result');
    let lens, img;

    function createZoomLens() {
        // Remove existing lens if any
        const existingLens = imgZoomContainer.querySelector('.img-zoom-lens');
        if (existingLens) existingLens.remove();

        // Create lens
        lens = document.createElement('div');
        lens.classList.add('img-zoom-lens', 'absolute', 'border', 'border-blue-500', 'bg-white', 'bg-opacity-20', 'z-10');
        lens.style.width = '100px';
        lens.style.height = '100px';
        imgZoomContainer.appendChild(lens);

        img = mainImage;

        // Event listeners for zoom
        imgZoomContainer.addEventListener('mousemove', moveLens);
        imgZoomContainer.addEventListener('mouseenter', showZoom);
        imgZoomContainer.addEventListener('mouseleave', hideZoom);
    }

    function showZoom() {
        imgZoomResult.classList.remove('hidden');
        createZoomLens();
    }

    function hideZoom() {
        imgZoomResult.classList.add('hidden');
        lens.remove();
    }

    function moveLens(e) {
        let pos, x, y;
        // Prevent default behavior
        e.preventDefault();

        // Get the cursor's x and y positions
        pos = getCursorPos(e);
        x = pos.x;
        y = pos.y;

        // Calculate lens position
        let lensWidth = lens.offsetWidth;
        let lensHeight = lens.offsetHeight;

        // Restrict lens movement within container
        x = x - (lensWidth / 2);
        y = y - (lensHeight / 2);

        // Prevent lens from going outside the image container
        x = Math.max(0, Math.min(x, imgZoomContainer.offsetWidth - lensWidth));
        y = Math.max(0, Math.min(y, imgZoomContainer.offsetHeight - lensHeight));

        // Position the lens
        lens.style.left = x + 'px';
        lens.style.top = y + 'px';

        // Update zoom result
        updateZoomResult(x, y);
    }

    function getCursorPos(e) {
        let rect = imgZoomContainer.getBoundingClientRect();
        return {
            x: e.clientX - rect.left,
            y: e.clientY - rect.top
        };
    }

    function updateZoomResult(x, y) {
        // Calculate zoom ratio
        const zoomRatio = 2;

        // Position and size zoom result
        imgZoomResult.style.position = 'fixed';
        imgZoomResult.style.top = '50%';
        imgZoomResult.style.right = '5%';
        imgZoomResult.style.transform = 'translateY(-50%)';
        imgZoomResult.style.width = '300px';
        imgZoomResult.style.height = '300px';
        imgZoomResult.style.border = '1px solid #ddd';
        imgZoomResult.style.backgroundImage = `url(${img.src})`;
        imgZoomResult.style.backgroundSize = `${img.width * zoomRatio}px ${img.height * zoomRatio}px`;
        
        // Calculate background position
        const containerWidth = imgZoomContainer.offsetWidth;
        const containerHeight = imgZoomContainer.offsetHeight;

        const bgX = -((x / containerWidth) * 100) * (img.width * zoomRatio - imgZoomResult.offsetWidth) / 100;
        const bgY = -((y / containerHeight) * 100) * (img.height * zoomRatio - imgZoomResult.offsetHeight) / 100;

        imgZoomResult.style.backgroundPosition = `${bgX}px ${bgY}px`;
    }

    // Initial zoom setup
    createZoomLens();
});

