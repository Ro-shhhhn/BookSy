      // Initialize slideshow
      function initSlideshow() {
        const slides = document.querySelectorAll('.hero-slide');
        const indicators = document.querySelectorAll('.slide-indicator');
        const prevBtn = document.querySelector('.hero-section button:first-of-type');
        const nextBtn = document.querySelector('.hero-section button:last-of-type');

        let currentSlide = 0;
        let slideInterval;
        const slideDelay = 3000; // 6 seconds per slide

        // Function to show a specific slide
        function showSlide(index) {
          slides.forEach(slide => {
            slide.classList.remove('active');
            slide.style.opacity = 0;
          });

          indicators.forEach(indicator => {
            indicator.classList.remove('active');
          });

          slides[index].classList.add('active');
          slides[index].style.opacity = 1;
          indicators[index].classList.add('active');

          currentSlide = index;
        }

        // Initialize the first slide
        showSlide(0);

        // Set up automatic slideshow
        function startSlideshow() {
          slideInterval = setInterval(() => {
            let nextSlide = (currentSlide + 1) % slides.length;
            showSlide(nextSlide);
          }, slideDelay);
        }

        // Start the slideshow
        startSlideshow();

        // Event listeners for manual navigation
        if (prevBtn) {
          prevBtn.addEventListener('click', () => {
            clearInterval(slideInterval);
            let prevSlide = (currentSlide - 1 + slides.length) % slides.length;
            showSlide(prevSlide);
            startSlideshow();
          });
        }

        if (nextBtn) {
          nextBtn.addEventListener('click', () => {
            clearInterval(slideInterval);
            let nextSlide = (currentSlide + 1) % slides.length;
            showSlide(nextSlide);
            startSlideshow();
          });
        }

        // Event listeners for indicators
        indicators.forEach((indicator, index) => {
          indicator.addEventListener('click', () => {
            clearInterval(slideInterval);
            showSlide(index);
            startSlideshow();
          });
        });

        // Pause slideshow on hover
        slides.forEach(slide => {
          slide.addEventListener('mouseenter', () => {
            clearInterval(slideInterval);
          });

          slide.addEventListener('mouseleave', () => {
            startSlideshow();
          });
        });
      }

      // Initialize the hero section
      createBookCarousel();
      createNewArrivals();
      initSlideshow();

      // Add infinite scroll animation to book carousel
      const carouselInner = document.querySelector('.carousel-inner');
      if (carouselInner) {
        const carouselWidth = carouselInner.scrollWidth / 2;
        carouselInner.style.animation = `scrollX ${featuredBooks.length * 5}s linear infinite`;

