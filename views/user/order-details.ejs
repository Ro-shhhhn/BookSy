  <div class="container mx-auto">
    <h1 class="text-2xl font-bold mb-6">Order Details</h1>

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <div>
                <span class="font-bold">Order #<%= order.uniqueOrderId %></span>
                <span 
                    class="ml-4 px-3 py-1 rounded-full text-sm 
                    <%= 
                        order.orderStatus === 'Delivered' ? 'bg-green-200 text-green-800' :
                        order.orderStatus === 'Returned' ? 'bg-purple-200 text-purple-800' :
                        order.orderStatus === 'Cancelled' ? 'bg-red-200 text-red-800' :
                        order.orderStatus === 'Processing' ? 'bg-yellow-200 text-yellow-800' :
                        'bg-blue-200 text-blue-800'
                    %>"
                >
                    <%= order.orderStatus %>
                </span>
                
                <% 
                // Calculate how many items are returned
                const returnedItems = order.items.filter(item => item.returnStatus === 'Approved');
                if (returnedItems.length > 0 && returnedItems.length < order.items.length) { %>
                    <span class="ml-2 px-3 py-1 rounded-full text-xs bg-purple-200 text-purple-800">
                        <%= returnedItems.length %> of <%= order.items.length %> items returned
                    </span>
                <% } %>
            </div>
            <div>
                <span class="text-gray-600">
                    Order Date: <%= order.createdAt.toLocaleDateString() %>
                </span>
            </div>
        </div>

        <!-- Add this right after the existing order status display in the order-details.ejs file -->
        <div class="mb-6">
            <% if (order.orderStatus === 'Shipped') { %>
                <button onclick="openCancelShippedOrderModal()" class="mt-4 bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded">
                    Cancel Order
                </button>
            <% } %>
        </div>

        <div class="grid md:grid-cols-2 gap-6 mb-6">
            <div>
                <h2 class="text-lg font-semibold mb-4">Shipping Address</h2>
                <% if (order.shippingAddress) { %>
                    <p><%= order.shippingAddress.name || 'N/A' %></p>
                    <p><%= order.shippingAddress.addressLine1 || 'N/A' %></p>
                    <% if (order.shippingAddress.addressLine2) { %>
                        <p><%= order.shippingAddress.addressLine2 %></p>
                    <% } %>
                    <p>
                        <%= order.shippingAddress.city || 'N/A' %>, 
                        <%= order.shippingAddress.state || 'N/A' %> 
                        <%= order.shippingAddress.postalCode || 'N/A' %>
                    </p>
                    <p>Country: <%= order.shippingAddress.country || 'N/A' %></p>
                <% } else { %>
                    <p>No shipping address available</p>
                <% } %>
            </div>

            <div>
                <h2 class="text-lg font-semibold mb-4">Payment Details</h2>
                <p>Method: <%= order.paymentMethod %></p>
                <p>Subtotal: ₹<%= order.subtotal.toFixed(2) %></p>
                
                <% if (order.couponCode) { %>
                    <p class="text-green-600">
                        Coupon Applied: <%= order.couponCode %>
                        <span class="text-sm">(Discount: ₹<%= order.discount.toFixed(2) %>)</span>
                    </p>
                <% } %>
                
                <p class="font-semibold">Total Amount: ₹<%= order.total.toFixed(2) %></p>
                <p>Payment Status: 
                    <span 
                        class="px-2 py-1 rounded-full text-xs
                            <%= 
                                order.paymentStatus === 'paid' ? 'bg-green-200 text-green-800' :
                                order.paymentStatus === 'failed' ? 'bg-red-200 text-red-800' :
                                'bg-yellow-200 text-yellow-800'
                            %>"
                    >
                        <%= order.paymentStatus %>
                    </span>
                </p>
            </div>
        </div>

        <div>
            <h2 class="text-lg font-semibold mb-4">Order Items</h2>
            <div class="grid gap-4">
                <% order.items.forEach(item => { %>
                    <div class="flex items-center bg-gray-100 p-4 rounded-lg">
                        <img 
                            src="<%= item.product.coverImage %>" 
                            alt="<%= item.product.title %>" 
                            class="w-20 h-20 object-cover mr-4"
                        >
                        <div class="flex-grow">
                            <h3 class="font-bold"><%= item.product.title %></h3>
                            <p>Quantity: <%= item.quantity %></p>
                            
                            <!-- Price display with discount info -->
                            <p class="flex items-center">
                                <% if (item.price !== item.discountedPrice) { %>
                                    <span class="line-through text-gray-500 mr-2">₹<%= item.price %></span>
                                    <span class="font-medium">₹<%= item.discountedPrice %></span>
                                    
                                    <!-- Added discount source info badge -->
                                    <% if (item.discountSource && item.discountSource !== 'none') { %>
                                        <span class="ml-2 px-2 py-1 rounded-full text-xs 
                                            <%= item.discountSource === 'category' ? 'bg-blue-200 text-blue-800' : 'bg-green-200 text-green-800' %>">
                                            <%= item.discountSource === 'category' ? 'Category Offer' : 'Product Offer' %>
                                            <% if (item.discountPercentage) { %>
                                                (<%= item.discountPercentage %>% off)
                                            <% } %>
                                        </span>
                                    <% } %>
                                <% } else { %>
                                    <span>₹<%= item.price %></span>
                                <% } %>
                            </p>
                            
                            <% if (item.returnStatus && item.returnStatus !== 'None') { %>
                                <p class="mt-2">
                                    <span class="
                                        px-2 py-1 rounded-full text-xs
                                        <%= 
                                            item.returnStatus === 'Approved' ? 'bg-green-200 text-green-800' :
                                            item.returnStatus === 'Rejected' ? 'bg-red-200 text-red-800' :
                                            item.returnStatus === 'Cancelled' ? 'bg-red-200 text-red-800' :
                                            'bg-yellow-200 text-yellow-800'
                                        %>"
                                    >
                                        <%= item.returnStatus %>
                                    </span>
                                    <% if (item.returnReason) { %>
                                        <span class="text-sm text-gray-600 ml-2">
                                            (<%= item.returnReason.substring(0, 30) %><%= item.returnReason.length > 30 ? '...' : '' %>)
                                        </span>
                                    <% } %>
                                </p>
                            <% } %>
                        </div>
                        <div class="ml-4">
                            <% if (['Pending', 'Processing'].includes(order.orderStatus) && (!item.returnStatus || item.returnStatus === 'None')) { %>
                                <button 
                                    onclick="cancelProduct('<%= order._id %>', '<%= item.product._id %>')" 
                                    class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 text-sm"
                                >
                                    Cancel
                                </button>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <% if (order.orderStatus === 'Delivered') { %>
        <div class="mt-6">
            <h2 class="text-lg font-semibold mb-4">Return Products</h2>
            <form id="returnProductsForm" class="bg-gray-100 p-4 rounded-lg">
                <input type="hidden" id="orderId" value="<%= order._id %>">
                
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2">Select Products to Return:</label>
                    <div class="space-y-2">
                        <% order.items.forEach(item => { %>
                            <div class="flex items-center">
                                <input 
                                    type="checkbox" 
                                    name="returnProducts" 
                                    value="<%= item.product._id %>" 
                                    id="return-<%= item.product._id %>"
                                    class="mr-2"
                                >
                                <label for="return-<%= item.product._id %>" class="flex items-center">
                                    <img 
                                        src="<%= item.product.coverImage %>" 
                                        alt="<%= item.product.title %>" 
                                        class="w-10 h-10 object-cover mr-2"
                                    >
                                    <%= item.product.title %> (Qty: <%= item.quantity %>)
                                </label>
                            </div>
                        <% }); %>
                    </div>
                </div>
                
                <!-- Add this to replace the simple alerts with better validation UI in the returnProductsForm -->
                <div class="mb-4">
                    <label for="returnReason" class="block text-gray-700 mb-2">Return Reason:</label>
                    <textarea 
                        id="returnReason" 
                        name="returnReason" 
                        class="w-full border p-2 rounded" 
                        rows="3" 
                        required
                        placeholder="Please provide a detailed reason for the return (min 10 characters)"
                    ></textarea>
                    <p id="returnReasonError" class="hidden text-red-500 text-sm mt-1"></p>
                </div>
                
                <div class="flex justify-end">
                    <button 
                        type="button"
                        onclick="submitProductReturn()"
                        class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
                    >
                        Submit Return Request
                    </button>
                </div>
            </form>
        </div>
    <% } %>

    <% if (successMessage && successMessage.length > 0) { %>
        <div class="fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50">
            <%= successMessage %>
            <button onclick="this.parentElement.style.display='none'" class="ml-2">×</button>
        </div>
    <% } %>
    
    <% if (errorMessage && errorMessage.length > 0) { %>
        <div class="fixed top-4 right-4 bg-red-500 text-white px-4 py-2 rounded shadow-lg z-50">
            <%= errorMessage %>
            <button onclick="this.parentElement.style.display='none'" class="ml-2">×</button>
        </div>
    <% } %>
</div>

<!-- Enhanced notification messages system to replace browser alerts -->
<div id="notificationContainer" class="fixed top-4 right-4 z-50 flex flex-col space-y-2" style="max-width: 300px;"></div>

<!-- Modals -->
<div id="cancelProductModal" class="fixed inset-0 bg-gray-800 bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full">
        <h3 class="text-xl font-bold mb-4">Cancel Product</h3>
        <p class="mb-4">Are you sure you want to cancel this product? This action cannot be undone.</p>
        <div class="mb-4">
            <label for="cancelProductReason" class="block text-gray-700 mb-2">Reason for cancellation (optional):</label>
            <textarea 
                id="cancelProductReason" 
                class="w-full border p-2 rounded" 
                rows="3" 
                placeholder="Please provide a reason for cancellation"
            ></textarea>
            <p id="cancelProductReasonError" class="hidden text-red-500 text-sm mt-1"></p>
        </div>
        <div class="flex justify-end space-x-3">
            <button 
                onclick="closeCancelProductModal()" 
                class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded"
            >
                Cancel
            </button>
            <button 
                onclick="confirmProductCancel()" 
                class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded"
            >
                Confirm Cancellation
            </button>
        </div>
    </div>
</div>

<!-- Add this new modal for cancelling shipped orders -->
<div id="cancelShippedOrderModal" class="fixed inset-0 bg-gray-800 bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full">
        <h3 class="text-xl font-bold mb-4">Cancel Shipped Order</h3>
        <p class="mb-4">Are you sure you want to cancel this order? This action cannot be undone.</p>
        <div class="mb-4">
            <label for="cancelShippedOrderReason" class="block text-gray-700 mb-2">Reason for cancellation:</label>
            <textarea 
                id="cancelShippedOrderReason" 
                class="w-full border p-2 rounded" 
                rows="3" 
                placeholder="Please provide a reason for cancellation"
            ></textarea>
            <p id="cancelShippedOrderReasonError" class="hidden text-red-500 text-sm mt-1">Please provide a reason for cancellation</p>
        </div>
        <div class="flex justify-end space-x-3">
            <button 
                onclick="closeCancelShippedOrderModal()" 
                class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded"
            >
                Cancel
            </button>
            <button 
                onclick="confirmShippedOrderCancel()" 
                class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded"
            >
                Confirm Cancellation
            </button>
        </div>
    </div>
</div>

<script>
    let currentOrderId = null;
    let currentProductId = null;

    // Enhanced notification system
    function showNotification(message, type = 'success') {
        const container = document.getElementById('notificationContainer');
        const notification = document.createElement('div');
        
        notification.className = `p-4 rounded-lg shadow-lg text-white ${type === 'success' ? 'bg-green-500' : 'bg-red-500'}`;
        notification.innerHTML = `
            <div class="flex items-center justify-between">
                <span>${message}</span>
                <button class="ml-4 text-white hover:text-gray-200" onclick="this.parentElement.parentElement.remove()">×</button>
            </div>
        `;
        
        container.appendChild(notification);
        
        // Auto-remove after 5 seconds
        setTimeout(() => {
            if (notification.parentNode) {
                notification.remove();
            }
        }, 5000);
    }

    // Cancel product functions
    function cancelProduct(orderId, productId) {
        currentOrderId = orderId;
        currentProductId = productId;
        document.getElementById('cancelProductModal').classList.remove('hidden');
        document.getElementById('cancelProductModal').classList.add('flex');
    }

    function closeCancelProductModal() {
        document.getElementById('cancelProductModal').classList.add('hidden');
        document.getElementById('cancelProductModal').classList.remove('flex');
    }

    function confirmProductCancel() {
        const reason = document.getElementById('cancelProductReason').value;
        
        // Validate reason
        if (!reason || reason.trim().length < 5) {
            document.getElementById('cancelProductReasonError').classList.remove('hidden');
            document.getElementById('cancelProductReasonError').textContent = 'Please provide a reason (minimum 5 characters)';
            return;
        }
        
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/orders/${currentOrderId}/cancel-product`;

        const productInput = document.createElement('input');
        productInput.type = 'hidden';
        productInput.name = 'productId';
        productInput.value = currentProductId;
        form.appendChild(productInput);

        const reasonInput = document.createElement('input');
        reasonInput.type = 'hidden';
        reasonInput.name = 'reason';
        reasonInput.value = reason;
        form.appendChild(reasonInput);

        document.body.appendChild(form);
        form.submit();
    }

    // Add functions for shipped order cancellation
    function openCancelShippedOrderModal() {
        currentOrderId = '<%= order._id %>';
        document.getElementById('cancelShippedOrderModal').classList.remove('hidden');
        document.getElementById('cancelShippedOrderModal').classList.add('flex');
    }

    function closeCancelShippedOrderModal() {
        document.getElementById('cancelShippedOrderModal').classList.add('hidden');
        document.getElementById('cancelShippedOrderModal').classList.remove('flex');
    }

    function confirmShippedOrderCancel() {
        const reason = document.getElementById('cancelShippedOrderReason').value;
        
        // Validate reason
        if (!reason || reason.trim().length < 5) {
            document.getElementById('cancelShippedOrderReasonError').classList.remove('hidden');
            return;
        }
        
        // Hide error message if validation passes
        document.getElementById('cancelShippedOrderReasonError').classList.add('hidden');
        
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/orders/${currentOrderId}/cancel-shipped`;

        const reasonInput = document.createElement('input');
        reasonInput.type = 'hidden';
        reasonInput.name = 'reason';
        reasonInput.value = reason;
        form.appendChild(reasonInput);

        document.body.appendChild(form);
        form.submit();
    }

    // Enhanced return products function with better validation
    function submitProductReturn() {
        const orderId = document.getElementById('orderId').value;
        const reason = document.getElementById('returnReason').value;
        const checkboxes = document.querySelectorAll('input[name="returnProducts"]:checked');
        const errorElement = document.getElementById('returnReasonError');
        
        // Get selected product IDs
        const productIds = Array.from(checkboxes).map(checkbox => checkbox.value);
        
        // Validate selections
        if (productIds.length === 0) {
            showNotification('Please select at least one product to return', 'error');
            return;
        }
        
        // Validate reason
        if (!reason || reason.trim().length < 10) {
            errorElement.textContent = 'Please provide a detailed return reason (minimum 10 characters)';
            errorElement.classList.remove('hidden');
            return;
        }
        
        // Hide error message if validation passes
        errorElement.classList.add('hidden');
        
        // Send request to server
        fetch(`/orders/${orderId}/return-products`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ reason, productIds })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification('Return request submitted successfully');
                location.reload();
            } else {
                showNotification(data.message || 'Failed to submit return request', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('An error occurred while submitting your return request', 'error');
